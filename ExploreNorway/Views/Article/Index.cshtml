@model SimpleArticle
@{
    Layout = "~/Views/Shared/Layouts/_TwoColumnLeftWideWithoutPicturesLayout.cshtml";
}


@section header{

    <h1>@Model.Name</h1>
    <p>@Model.Ingress</p>
}

<div>
    @if (Model.IngressPicture.IsImage()) {
<img src='@Model.IngressPicture.GetUrl(270)' alt="@Model.IngressPicture.Description" style="float:right;margin-top:10px;" />}
    @Html.Raw(Model.Content)


</div>


@section sideRow{
    @Html.Partial("Partials/_RelatedArticles")
}